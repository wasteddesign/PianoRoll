<UserControl x:Class="Pianoroll.GUI.PianorollCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="clr-namespace:Pianoroll.GUI"             
    MinWidth="40" VerticalAlignment="Top" VerticalContentAlignment="Top" IsTabStop="True" Focusable="True"
    UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"
    >
    <Border Name="border" BorderBrush="Black" BorderThickness="1" Margin="0,0,4,4" SnapsToDevicePixels="True" Background="{DynamicResource PatternEditorBackgroundBrush}">
      <l:AniScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" VerticalAlignment="Top" SnapsToDevicePixels="True">
        <Canvas Name="canvas" SnapsToDevicePixels="True" HorizontalAlignment="Left" VerticalAlignment="Top">

        </Canvas>
      </l:AniScrollViewer>

    </Border>

</UserControl>
